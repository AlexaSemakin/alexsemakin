{
    "format": "html",
    "fileExtensions": [
        ".html"
    ],
    "excludeFiles": [
        "node_modules/**",
        "dist/**"
    ],
    "dictionary": [
        "апельсиновый",
        "Артёма",
        "постапокалиптической",
        "Цири",
        "Куиил",
        "Бобо",
        "Фет",
        "Амидале",
        "Иптимайзер",
        "Инфотис",
        "Habr",
        "IoT",
        "UseCase",
        "UserStory",
        "Jira",
        "Linux",
        "MacOS",
        "децентрализованную",
        "WF",
        "WPF",
        "C",
        "Latexted",
        "localstorage",
        "local storage",
        "API",
        "Metro",
        "V"
    ],
    "ignoreText": [
        "\\s{2,}[А-Яа-я]+",
        "^[A-Z]$",
        "\\d+[А-Яа-я]+"
    ],
    "ignoreUrls": true,
    "ignoreCapitalization": true,
    "checkYo": true,
    "report": [
        "console"
    ]
}
